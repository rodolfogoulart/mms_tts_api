# ============================================
# CONFIGURAÇÃO DE SEGURANÇA
# ============================================
JWT_SECRET_KEY=your-super-secret-key-change-in-production-use-long-random-string
TOKEN_EXPIRE_MINUTES=60

# ============================================
# CONFIGURAÇÃO DO BANCO DE DADOS
# ============================================
DATABASE_PATH=/app/data/tts_auth.db

# ============================================
# USUÁRIOS PADRÃO
# ============================================
CREATE_DEFAULT_USERS=true

# Usuário Administrador
ADMIN_USERNAME=admin
ADMIN_PASSWORD=SecureAdminPass123!
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_RATE_LIMIT=1000

# Usuário Demo
DEMO_USERNAME=demo
DEMO_PASSWORD=DemoPass123!
DEMO_EMAIL=demo@yourdomain.com
DEMO_RATE_LIMIT=100

# ============================================
# API KEYS PADRÃO
# ============================================
CREATE_DEMO_API_KEY=true
CREATE_ADMIN_API_KEY=true

DEMO_API_KEY_NAME=Demo API Key
DEMO_API_KEY_RATE_LIMIT=50

ADMIN_API_KEY_NAME=Admin API Key
ADMIN_API_KEY_RATE_LIMIT=1000

# ============================================
# CONFIGURAÇÕES AVANÇADAS
# ============================================
# Desabilitar criação de dados padrão em produção
# CREATE_DEFAULT_USERS=false
# CREATE_DEMO_API_KEY=false